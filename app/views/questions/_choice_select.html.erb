<% if question.user_answered?(current_user) %>
  <% choices.each do |choice| %>
    <div class="choice-content">
      <div class="choice-front" style="width: <%= choice.choice_score_percentage %>%"></div>
      <div class="choice-back"><%= choice.content %></div>
      <div class="choice-percentage"><%= choice.choice_score_percentage %>%</div>
    </div>
  <% end %>
<% else %>
  <% choices.each do |choice| %>
    <%= link_to question_choice_path(question, choice), method: :patch, remote: true do %>
      <div class="choice-content">
        <%= choice.content %>
      </div>
    <% end %>
  <% end %>
<% end %>